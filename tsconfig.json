{
  "compilerOptions": {
    "lib": [
      "es2015"
    ],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "target": "es5",
    "outDir": "lib",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": ["./src/*"]
    }
  },
  "include": [
    "./src/**/*", "handler.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}